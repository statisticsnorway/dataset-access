{
  "endpoints": {
    "info": {
      "enabled": true,
      "sensitive": false
    },
    "prometheus": {
      "enabled": true,
      "sensitive": false
    }
  },
  "micronaut": {
    "application": {
      "name": "dataset-access"
    },
    "metrics": {
      "enabled": true,
      "sensitive": false
    }
  },
  "postgres": {
    "reactive": {
      "client": {
        "database": "rdc",
        "host": "postgres",
        "maxSize": 5,
        "password": "rdc",
        "port": 5432,
        "user": "rdc"
      }
    }
  },
  "flyway": {
    "datasources": {
      "default": {
        "url": "jdbc:postgresql://${postgres.reactive.client.host}:${postgres.reactive.client.port}/${postgres.reactive.client.database}",
        "user": "${postgres.reactive.client.user}",
        "password": "${postgres.reactive.client.password}",
        "locations": "filesystem:./databasemigrations"
      }
    }
  },
  "tracing": {
    "jaeger": {
      "enabled": true,
      "reporter": {
        "flushInterval": 2000,
        "maxQueueSize": 200
      },
      "sampler": {
        "probability": 1
      },
      "sender": {
        "agentHost": "localhost",
        "agentPort": 5775
      }
    }
  }
}
